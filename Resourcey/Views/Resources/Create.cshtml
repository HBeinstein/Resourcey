@{
  Layout = "_Layout";
}

@using Resourcey.Enums
@model Resourcey.Models.Resource

<h1>New Resource</h1>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date)

  @Html.LabelFor(model => model.ResourceUrl)
  @Html.TextBoxFor(model => model.ResourceUrl)

  @Html.LabelFor(model => model.Type)
  @Html.GetEnumSelectList(typeof(ResourceType))

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.HiddenFor(model => model.SectionId)

  @Html.Label("Select Section")
  @Html.DropDownList("SectionId")

  <input type="submit" value="Add Classroom" class="btn-btn-default"/>

}

@Html.ActionLink("Back to Classroom", "Index", "Classrooms")
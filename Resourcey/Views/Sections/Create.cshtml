@{
  Layout = "_Layout";
}

@model Resourcey.Models.Section
<div class="container">
<h1>Add Section</h1>
@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Section Name" })

  @Html.Hidden("ClassroomId", TempData["classroomId"])

  <input type="submit" value="Add new section" class="button-styles"/>
}
</div>



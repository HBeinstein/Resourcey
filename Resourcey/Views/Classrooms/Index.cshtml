  @{
    Layout = "_Layout";
  }

@using Resourcey.Models
@model List<Resourcey.Models.Classroom>

<h1>Classrooms</h1>

@if(@Model.Count == 0)
{
  <h1>There are no classrooms!</h1>
  <button type="button" class="btn btn-warning">@Html.ActionLink("Create one here", "Create")</button>
}
else
{



  @foreach(Classroom classroom in Model)
  {
    <p>@Html.ActionLink($"{classroom.CourseName}", "Details", new { id = classroom.ClassroomId})</p>
  }
  <button type="button" class="btn btn-warning">@Html.ActionLink("Create one here", "Create")</button>


}

@{
  Layout = "_Layout";
}

@using Resourcey.Models;
@using System.Security.Claims;
@model IEnumerable<Resourcey.Models.Classroom>

<h1>Classroom</h1>

@if (@Model.Any())
{
<div class="container">
  <div class="row">
  @foreach (Classroom classroom in Model)
  {
    <div class="col-sm-4"><p>@Html.ActionLink($"{classroom.CourseName}", "Details", new { id = classroom.ClassroomId } )<p></div>
  }
  </div>
</div>
}
else
{
    <h2>No Classrooms have been added just yet!</h2>
}

<button type="button" class="btn btn-warning">@Html.ActionLink("Add a new Classroom", "Create")</button>



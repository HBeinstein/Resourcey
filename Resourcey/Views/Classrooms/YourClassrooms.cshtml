@{
  Layout = "_Layout";
}

@using Resourcey.Models;
@using System.Security.Claims;
@model IEnumerable<Resourcey.Models.Classroom>

<div class="container" id="yourClassroomContainer">
  <div class="row align-items-center">
<h1>My Classrooms</h1><br/>
<button type="button" id="yourclassroombtn">@Html.ActionLink("Add a new Classroom", "Create", null, null, new{@class="button-styles"})</button>
  </div>
</div>

@if (@Model.Any())
{
<div class="container">
  <div class="row align-items-center">
  @foreach (Classroom classroom in Model)
  {
    <div class="col-sm-4" id ="myClassroomContent"><img src="~/img/openBook.png" id="bookIcon"> <br> <button>@Html.ActionLink($"{classroom.CourseName}", "Details", new { id = classroom.ClassroomId }, new{@class="button-styles"} )</button></div>
  }
  </div>
</div>
}
else
{
    <p>No Classrooms have been added just yet!</p>
}


